<%= form_with(model: fight_opponent, class: "contents") do |form| %>
  <% if fight_opponent.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(fight_opponent.errors.count, "error") %> prohibited this fight_opponent from being saved:</h2>

      <ul>
        <% fight_opponent.errors.each do |error| %>
