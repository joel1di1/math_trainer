<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Fights</h1>
    <%= link_to 'New fight', new_fight_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <% @fight_opponents.each do |fight_opponent| %>
    <div class="flex justify-between items-center">
      <%= button_to fights_path(fight_opponent_name: fight_opponent.name, method: :post) do %>
        <h2 class="font-bold text-2xl mt-5"><%= fight_opponent.name %></h2>
      <% end %>
    </div>
  <% end %>


  <div id="fights" class="min-w-full">
    <%= render @fights %>
  </div>
</div>
